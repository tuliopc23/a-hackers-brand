{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "scripts/**/*.js",
    "src/routes/**/*.{js,ts,svelte}",
    "src/lib/**/index.{js,ts}",
    "src/app.html"
  ],
  "project": [
    "scripts/**/*.js",
    "src/**/*.{js,ts,svelte}"
  ],
  "ignore": [
    "dist/**",
    "node_modules/**",
    ".svelte-kit/**"
  ],
  "ignoreDependencies": [
    "@lhci/cli",
    "@playwright/test"
  ],
  "ignoreBinaries": [
    "publish"
  ],
  "vite": {
    "config": ["vite.config.ts"]
  },
  "vitest": {
    "config": ["vitest.config.ts"]
  },
  "eslint": {
    "config": ["eslint.config.js"]
  },
  "tailwind": {
    "config": ["tailwind.config.js"]
  },
  "bun": {
    "entry": ["package.json"]
  }
}