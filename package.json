	"scripts": {
		"prepare": "bun run barrel:generate && bun run check && bun run build:package",
		"prepublishOnly": "bun run test:run && bun run lint && bun run build:package",
		"analyze": "bunx --bun vite build --mode analyze",
		"barrel:generate": "bun scripts/generate-barrel.js",
		"barrel:watch": "node scripts/generate-barrel.js --watch",
		"build:package": "bun run barrel:generate && bunx --bun svelte-kit sync && bunx --bun svelte-package && bunx --bun publint",
		"check": "bunx --bun svelte-kit sync && bunx --bun svelte-check --tsconfig ./tsconfig.check.json",
		"check:watch": "bunx --bun svelte-kit sync && bunx --bun svelte-check --tsconfig ./tsconfig.check.json --watch",
		"css:build": "bun run build:package && bun run css:extract",
		"css:extract": "bun scripts/extract-css.js",
		"deploy": "bun scripts/deploy.js",
		"deploy:dry-run": "bun scripts/deploy.js -- --dry-run",
		"deploy:skip-tests": "bun scripts/deploy.js -- --skip-tests",
		"dev": "bunx --bun vite dev --host",
		"docs:build": "echo 'Histoire has been removed due to dependency conflicts.'",
		"docs:build-integrated": "bun scripts/build-docs.js",
		"docs:dev": "echo 'Histoire has been removed due to dependency conflicts.'",
		"docs:generate": "bun run generate:docs",
		"docs:preview": "echo 'Histoire has been removed due to dependency conflicts.'",
		"docs:watch": "bun run generate:docs:watch",
		"format": "bunx --bun prettier --write .",
		"format:check": "bunx --bun prettier --check .",
		"generate": "bun run generate:component",
		"generate:component": "bun scripts/generate-component.js",
		"generate:docs": "bun scripts/generate-docs.js",
		"generate:docs:watch": "bun scripts/generate-docs.js -- --watch",
		"lint": "bunx --bun eslint . --max-warnings 0",
		"lint:fix": "bunx --bun eslint . --fix --max-warnings 0",
		"lint:report": "bunx --bun eslint . --format html --output-file eslint-report.html",
		"package": "bunx --bun svelte-kit sync && bunx --bun svelte-package",
		"perf": "bunx --bun lhci autorun --collect.url=http://localhost:5173",
		"perf:assert": "bunx --bun lhci assert",
		"perf:collect": "bunx --bun lhci collect --url=http://localhost:5173",
		"perf:upload": "bunx --bun lhci upload",
		"preview": "bunx --bun vite preview --host",
		"size": "bunx --bun size-limit",
		"size:analyze": "bunx --bun size-limit --why",
		"size:why": "bunx --bun size-limit --why",
		"style": "bunx --bun stylelint '**/*.{css,scss,svelte}' --fix",
		"style:check": "bunx --bun stylelint '**/*.{css,scss,svelte}'",
		"test": "bunx --bun vitest",
		"test:a11y": "bunx --bun playwright test tests/accessibility",
		"test:a11y:report": "bunx --bun playwright test tests/accessibility --reporter=html",
		"test:a11y:ui": "bunx --bun playwright test tests/accessibility --ui",
		"test:a11y:wcag": "bunx --bun playwright test tests/accessibility/wcag-compliance.spec.ts",
		"test:coverage": "bunx --bun vitest run --coverage",
		"test:coverage:analyze": "bun scripts/test-coverage-analysis.js",
		"test:coverage:ui": "bunx --bun vitest --coverage --ui",
		"test:coverage:watch": "bunx --bun vitest --coverage --watch",
		"test:e2e": "bunx --bun playwright test tests/e2e",
		"test:e2e:debug": "bunx --bun playwright test tests/e2e --debug",
		"test:e2e:headed": "bunx --bun playwright test tests/e2e --headed",
		"test:e2e:ui": "bunx --bun playwright test tests/e2e --ui",
		"test:integration": "bunx --bun vitest run tests/integration",
		"test:integration:watch": "bunx --bun vitest tests/integration",
		"test:motion": "bunx --bun vitest run src/lib/motion",
		"test:run": "bunx --bun vitest run",
		"test:visual": "bunx --bun playwright test tests/visual",
		"test:visual-regression": "bunx --bun playwright test --config=playwright.visual.config.js",
		"test:visual-regression:ui": "bunx --bun playwright test --config=playwright.visual.config.js --ui",
		"test:visual-regression:update": "bunx --bun playwright test --config=playwright.visual.config.js --update-snapshots",
		"test:visual:core": "bunx --bun playwright test tests/visual/core-components.spec.ts",
		"test:visual:motion": "bunx --bun playwright test tests/visual/motion-animations.spec.ts",
		"test:visual:terminal": "bunx --bun playwright test tests/visual/terminal-components.spec.ts",
		"test:visual:ui": "bunx --bun playwright test tests/visual --ui",
		"test:visual:update": "bunx --bun playwright test tests/visual --update-snapshots",
		"tree-shake:test": "bun scripts/tree-shaking-test.js",
		"knip": "bunx --bun knip",
		"build": "bunx --bun vite build",
		"build:lib": "bun run build:package",
		"build:bun": "bun scripts/bun-build.js",
		"dev:bun": "bun scripts/bun-dev.js",
		"test:bun": "bun scripts/bun-test.js",
		"typecheck": "bun run check"
	},
	"sideEffects": [
		"**/*.css",
