{
	"name": "tulio-brand-system",
	"private": false,
	"version": "0.2.0",
	"type": "module",
	"description": "Professional Liquid Glass Terminal Fusion Brand System - A cutting-edge design system combining Apple's liquid glass aesthetics with terminal/CLI hacker aesthetics",
	"author": {
		"name": "Tulio Pinheiro Cunha",
		"email": "tulio@example.com"
	},
	"license": "MIT",
	"homepage": "https://github.com/tuliopinheirocunha/tulio-brand-system#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/tuliopinheirocunha/tulio-brand-system.git"
	},
	"bugs": {
		"url": "https://github.com/tuliopinheirocunha/tulio-brand-system/issues"
	},
	"keywords": [
		"design-system",
		"svelte",
		"sveltekit",
		"liquid-glass",
		"terminal",
		"cli",
		"hacker-aesthetics",
		"brand-system",
		"ui-components",
		"webgl",
		"three",
		"threlte"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./components": {
			"types": "./dist/components/index.d.ts",
			"svelte": "./dist/components/index.js",
			"import": "./dist/components/index.js",
			"default": "./dist/components/index.js"
		},
		"./styles": "./dist/styles/index.css",
		"./tokens": {
			"types": "./dist/tokens/index.d.ts",
			"import": "./dist/tokens/index.js",
			"default": "./dist/tokens/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"typesVersions": {
		">4.0": {
			"components": [
				"./dist/components/index.d.ts"
			],
			"tokens": [
				"./dist/tokens/index.d.ts"
			],
			"index": [
				"./dist/index.d.ts"
			]
		}
	},
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run build:package",
		"build:app": "vite build",
		"build:package": "svelte-kit sync && svelte-package && publint",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package",
		"prepublishOnly": "npm run package",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"perf": "lhci autorun --collect.url=http://localhost:5173",
		"perf:collect": "lhci collect --url=http://localhost:5173",
		"perf:assert": "lhci assert",
		"perf:upload": "lhci upload",
		"analyze:bundle": "vite-bundle-analyzer",
		"analyze:inspect": "vite build --mode=development && vite-plugin-inspect",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:motion": "vitest run src/lib/motion",
		"test:visual": "playwright test",
		"test:visual:update": "playwright test --update-snapshots",
		"test:visual:ui": "playwright test --ui",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"docs:dev": "histoire dev",
		"docs:build": "histoire build",
		"docs:preview": "histoire preview",
		"docs:build-integrated": "node scripts/build-docs.js",
		"size": "size-limit",
		"size:analyze": "size-limit --why"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"@threlte/core": "^8.0.0",
		"@threlte/extras": "^9.0.0",
		"svelte": "^5.0.0",
		"three": "^0.170.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@histoire/plugin-svelte": "^0.17.17",
		"@lhci/cli": "^0.15.1",
		"@playwright/test": "^1.53.2",
		"@size-limit/preset-app": "^11.2.0",
		"@storybook/test-runner": "^0.23.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/package": "^2.3.12",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@swc/core": "^1.12.9",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"@vitest/coverage-v8": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"happy-dom": "^18.0.1",
		"histoire": "^0.17.17",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lighthouse": "^12.7.0",
		"lint-staged": "^16.1.2",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.2.12",
		"size-limit": "^11.2.0",
		"svelte": "^5.35.1",
		"svelte-check": "^4.0.0",
		"tailwind-config-viewer": "^2.0.4",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.0",
		"vite-plugin-bundle-analyzer": "^0.0.1",
		"vite-plugin-inspect": "^11.3.0",
		"vite-plugin-swc-transform": "^1.1.0",
		"vitest": "^3.2.4",
		"web-vitals": "^5.0.3"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{css,scss,html,json,md}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.11",
		"@threlte/core": "^8.0.0",
		"@threlte/extras": "^9.0.0",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.525.0",
		"tailwind-merge": "^3.3.1",
		"three": "^0.170.0"
	}
}
