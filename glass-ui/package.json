{
  "name": "@tuliopc23/glass-ui",
  "version": "1.0.0",
  "description": "Professional glassmorphism component library for React. Beautiful, accessible, and performant components with advanced glass effects.",
  "keywords": [
    "react",
    "components",
    "ui",
    "glassmorphism",
    "design-system",
    "typescript",
    "accessibility",
    "performance"
  ],
  "author": {
    "name": "Tulio Pinheiro Cunha",
    "email": "tulio@tuliocunha.dev",
    "url": "https://tuliocunha.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuliopc23/glass-ui.git"
  },
  "bugs": {
    "url": "https://github.com/tuliopc23/glass-ui/issues"
  },
  "homepage": "https://glass-ui.tuliocunha.dev",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:lib && npm run build:types",
    "build:lib": "vite build",
    "build:types": "tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.525.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@storybook/addon-a11y": "^9.0.15",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.0.15",
    "@storybook/addon-storysource": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^9.0.15",
    "@storybook/react-vite": "^9.0.15"
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1"
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chromatic": "^13.1.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5"
    "eslint-plugin-jsx-a11y": "^6.12.1",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-storybook": "^0.11.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.6"
    "size-limit": "^11.2.0",
    "storybook": "^9.0.15",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4"
    "vitest": "^3.2.4"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "150 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "150 KB"
    }
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
