{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": false,
    "jsx": "react-jsx",
    "types": []
  },
  "include": ["src", "docs"],
  "exclude": ["node_modules", "dist"]
}
