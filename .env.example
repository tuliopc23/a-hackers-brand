PUBLIC_SENTRY_DSN=

# API Configuration (if needed)
# GITHUB_TOKEN=
# NPM_TOKEN=

# Feature Flags
PUBLIC_ENABLE_PLAYGROUND=true
PUBLIC_ENABLE_SEARCH=true
