PUBLIC_SITE_NAME="A Hacker's Brand"
PUBLIC_SITE_DESCRIPTION="A cutting-edge design system combining liquid glass aesthetics with terminal/CLI hacker aesthetics"

# Environment
NODE_ENV=development
VITE_ENV=development

# Analytics (optional - Plausible, Fathom, etc.)
