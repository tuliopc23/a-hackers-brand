{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		// Relax some strict rules for tests
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"exactOptionalPropertyTypes": false,
		"noImplicitAny": false,
		"strict": false
	},
	"include": [
		"src/**/*.test.ts",
		"src/**/*.test.js",
		"src/**/*.spec.ts",
		"src/**/*.spec.js",
		"src/**/__tests__/**/*"
	]
}
